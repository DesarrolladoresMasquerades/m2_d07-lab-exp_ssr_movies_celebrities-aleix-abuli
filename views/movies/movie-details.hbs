<h2>{{title}}</h2>
<p>Genre: {{genre}}<p>
<p>{{plot}}</p>
<div>
    <h5>Cast</h5>
    {{#each cast}}
        <div>
            <p>{{name}}</p>
            <p>{{occupation}}</p>
            <p>"{{catchPhrase}}"</p>
        </div>
    {{/each}}
</div>
<form action="/movies/{{_id}}/delete" method="POST">
    <button type="submit">Delete this movie</button>
</form>